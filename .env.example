# =============================================================================
# Sports Prophet - Environment Configuration Template
# =============================================================================
# Copy this file to .env and customize values for your environment
# Do NOT commit .env files with sensitive data to version control

# =============================================================================
# Kafka Configuration
# =============================================================================
KAFKA_BROKER_URL=localhost:9092

# =============================================================================
# Spark Configuration
# =============================================================================
SPARK_MASTER_URL=local[*]
SPARK_APP_NAME=Kafka Streaming Stats

# =============================================================================
# Hadoop Configuration (if using HDFS)
# =============================================================================
HADOOP_URL=hdfs://localhost:9000

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000

# Comma-separated list of allowed CORS origins
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# Performance Configuration
# =============================================================================
MAX_WORKERS=16

# =============================================================================
# File Paths (optional - defaults are relative to backend/)
# =============================================================================
# HISTORICAL_DATA_PATH=backend/data/historical/devices
# SCHEMA_DATA_PATH=backend/data/device_schemas
